# Program Python Sederhana untuk Mengecek Tahun Kabisat

def cek_tahun_kabisat(tahun):
  """
  Fungsi ini menerima input tahun (integer) dan mengembalikan True jika
  tahun tersebut adalah tahun kabisat, dan False jika bukan.
  """
  # Aturan tahun kabisat:
  # 1. Habis dibagi 4, kecuali jika habis dibagi 100.
  # 2. Jika habis dibagi 100, maka harus juga habis dibagi 400.
  if (tahun % 4 == 0 and tahun % 100 != 0) or (tahun % 400 == 0):
    return True
  else:
    return False

def main():
  """
  Fungsi utama untuk menjalankan program.
  """
  print("Selamat datang di Program Pengecek Tahun Kabisat!")

  while True:
    try:
      # Meminta input dari pengguna
      input_str = input("\nMasukkan tahun (atau ketik 'keluar' untuk berhenti): ")

      # Memeriksa apakah pengguna ingin keluar
      if input_str.lower() == 'keluar':
        print("Terima kasih telah menggunakan program ini. Sampai jumpa!")
        break # Keluar dari loop while

      # Mengkonversi input menjadi integer
      tahun = int(input_str)

      # Memanggil fungsi untuk mengecek tahun kabisat
      if cek_tahun_kabisat(tahun):
        print(f"Tahun {tahun} adalah tahun kabisat.")
      else:
        print(f"Tahun {tahun} bukan tahun kabisat.")

    except ValueError:
      # Menangani jika input bukan angka yang valid
      print("Input tidak valid. Harap masukkan angka untuk tahun atau ketik 'keluar'.")
    except Exception as e:
      # Menangani error lainnya
      print(f"Terjadi kesalahan: {e}")

if __name__ == "__main__":
  # Menjalankan fungsi utama ketika script dieksekusi
  main()
